<div class= "row mt-4">
  <div class= "col">
    <h3>Category Details</h3>
  </div>
</div>

<div class="row">
  <div class="col">
    <div class="card mt-2" style="width: 18rem;">
      <div class="card-body">        
        <h5 class="card-title"><%= @category.name %></h5>
        <p class="card-text"><%= @category.category.name if @category.category %></p>
        <div class="row">
          <div class="col text-center"><%= link_to "Add New", new_category_url, class: ["card-link"] %></div>
          <div class="col text-center"><%= link_to "Edit", edit_category_url, class: ["card-link"] %></div>
          <div class="col text-center"><%= link_to "Delete", category_path(@category), data: {
                                                  turbo_method: :delete,
                                                  turbo_confirm: "Are you sure?" }, class: ["card-link"] %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>